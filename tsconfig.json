{
	"compilerOptions": {
		"strict": true,
		"noImplicitOverride": true,
		"esModuleInterop": true,
		"declaration": true,
		"pretty": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"erasableSyntaxOnly": true,
		"isolatedModules": true,
		"skipLibCheck": true,
		"lib": ["es2022", "dom", "dom.iterable"],
		"jsx": "react-jsx",
		"target": "es2022",
		"module": "ESNext",
		"moduleResolution": "node",
		"outDir": "./dist",
		"baseUrl": "./src",
		"rootDir": "./src",
		"paths": { "*": ["*"] },
		"types": ["node"]
	},
	"exclude": ["node_modules", "dist", "tools", "./commitlint.config.ts"]
}
