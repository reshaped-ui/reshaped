{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"outDir": "dist",
		"baseUrl": "./src",
		"rootDir": "./src",
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "Node",
		"paths": { "*": ["*"] }
	},
	"exclude": [
		"node_modules",
		"dist",
		"tools",
		"src/utilities/testPresets.tsx",
		"./src/**/*.test.tsx",
		"./src/**/*.test.ts",
		"./src/**/*.stories.tsx",
		"./commitlint.config.ts"
	]
}
