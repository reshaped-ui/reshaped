{
	"name": "reshaped",
	"description": "Professionally crafted design system in React & Figma for building products of any scale and complexity",
	"version": "3.2.0-canary.4",
	"license": "MIT",
	"email": "hello@reshaped.so",
	"homepage": "https://reshaped.so",
	"keywords": [
		"react",
		"ui",
		"design-system",
		"react-components",
		"component-library",
		"components",
		"css-modules",
		"figma",
		"ui-kit",
		"accessibility",
		"accessible"
	],
	"bugs": {
		"url": "https://github.com/formaat-design/reshaped/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/formaat-design/reshaped"
	},
	"files": [
		"bin/cli.js",
		"dist/**/*"
	],
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./themes": {
			"types": "./dist/themes/index.d.ts",
			"default": "./dist/cjs/themes/index.js"
		},
		"./config/postcss": {
			"types": "./dist/config/postcss.d.ts",
			"default": "./dist/cjs/config/postcss.js"
		},
		"./config/tailwind": {
			"types": "./dist/config/tailwind.d.ts",
			"default": "./dist/cjs/config/tailwind.js"
		},
		"./bundle": {
			"types": "./dist/bundle.d.ts",
			"import": "./dist/bundle.js"
		},
		"./bundle.css": "./dist/bundle.css",
		"./themes/reshaped/theme.css": "./dist/themes/reshaped/theme.css",
		"./themes/slate/theme.css": "./dist/themes/slate/theme.css",
		"./themes/figma/theme.css": "./dist/themes/figma/theme.css",
		"./themes/fragments/twitter/theme.css": "./dist/themes/fragments/twitter/theme.css",
		"./package.json": "./package.json"
	},
	"sideEffects": false,
	"bin": {
		"reshaped": "./bin/cli.js"
	},
	"scripts": {
		"dev": "storybook dev -c tools/storybook -p 3001 --disable-telemetry",
		"clean": "sh ./bin/clean.sh",
		"build": "yarn clean && yarn build:stories && yarn build:esm && yarn build:css && yarn build:cjs && yarn build:bundle",
		"build:themes": "node bin/cli.js theming --config dist/cjs/cli/theming/reshaped.config.js --output src/themes",
		"build:esm": "tsc -p tsconfig.esm.json && resolve-tspaths -p tsconfig.esm.json",
		"build:cjs": "tsc -p tsconfig.cjs.json && resolve-tspaths -p tsconfig.cjs.json && node ./bin/format-cjs-build.js",
		"build:css": "postcss \"src/**/*.css\" --dir dist --base src --config tools/build",
		"build:stories": "tsc -p tsconfig.stories.json && resolve-tspaths -p tsconfig.stories.json",
		"build:bundle": "vite build && mv dist/bundle.umd.js dist/bundle.js && cp dist/index.d.ts dist/bundle.d.ts",
		"build:storybook": "storybook build -c tools/storybook -o dist/app --disable-telemetry",
		"build:chromatic": "STORYBOOK_ENV=chromatic storybook build -c tools/storybook",
		"release": "read -p 'Have you updated chromatic tests?' && yarn release:lib && yarn release:source && yarn build:storybook && yarn release:copy",
		"release:lib": "yarn build && yarn publish",
		"release:beta": "yarn build && yarn publish --tag beta",
		"release:test": "yarn build && yarn pack --filename reshaped-test.tgz",
		"release:source": "sh ./bin/release-source.sh",
		"release:copy": "sh ./bin/release-copy.sh",
		"chromatic": "chromatic -b build:chromatic --project-token=$(cat .chromatic)",
		"test:vrt": "yarn chromatic",
		"test:unit": "jest --config tools/jest/jest.config.ts",
		"test:size": "size-limit",
		"lint": "yarn lint:js && yarn lint:css",
		"lint:js": "eslint './src/**/*.{ts,tsx}' --fix",
		"lint:css": "stylelint 'src/**/*.css'",
		"commit": "git-cz"
	},
	"browserslist": [
		"defaults and not IE 11"
	],
	"devDependencies": {
		"@commitlint/cli": "19.4.0",
		"@commitlint/config-conventional": "19.2.2",
		"@commitlint/types": "19.0.3",
		"@eslint/js": "^9.9.0",
		"@size-limit/preset-big-lib": "11.1.4",
		"@storybook/addon-a11y": "8.2.8",
		"@storybook/addon-controls": "8.2.8",
		"@storybook/addon-docs": "8.2.8",
		"@storybook/addon-storysource": "8.2.8",
		"@storybook/react": "8.2.8",
		"@storybook/react-vite": "8.2.8",
		"@testing-library/dom": "10.4.0",
		"@testing-library/jest-dom": "6.4.8",
		"@testing-library/react": "16.0.0",
		"@testing-library/user-event": "14.5.2",
		"@types/culori": "2.1.1",
		"@types/events": "3.0.3",
		"@types/jest": "29.5.12",
		"@types/node": "22.2.0",
		"@types/react": "18.3.3",
		"@types/react-dom": "18.3.0",
		"@typescript-eslint/eslint-plugin": "7.6.0",
		"@typescript-eslint/parser": "7.6.0",
		"@vitejs/plugin-react": "4.3.1",
		"chromatic": "11.7.0",
		"cz-conventional-changelog": "3.3.0",
		"eslint": "8.56.0",
		"eslint-config-airbnb-typescript": "17.1.0",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-import": "2.29.1",
		"eslint-plugin-jsx-a11y": "6.9.0",
		"eslint-plugin-prettier": "5.1.3",
		"eslint-plugin-react": "7.33.2",
		"eslint-plugin-react-hooks": "4.6.0",
		"globals": "^15.9.0",
		"identity-obj-proxy": "3.0.0",
		"jest": "29.7.0",
		"jest-environment-jsdom": "29.7.0",
		"jest-matchmedia-mock": "1.1.0",
		"lefthook": "1.7.12",
		"postcss": "8.4.41",
		"postcss-cli": "11.0.0",
		"postcss-each": "1.1.0",
		"postcss-nested": "6.2.0",
		"prettier": "3.3.3",
		"react": "18.3.1",
		"react-dom": "18.3.1",
		"resolve-tspaths": "0.8.19",
		"size-limit": "11.1.4",
		"storybook": "8.2.8",
		"stylelint": "16.8.1",
		"stylelint-config-prettier": "9.0.5",
		"stylelint-config-standard": "36.0.1",
		"ts-jest": "29.2.4",
		"ts-node": "10.9.2",
		"typescript": "5.5.4",
		"typescript-eslint": "^8.0.1",
		"vite": "5.4.0",
		"vite-tsconfig-paths": "4.3.2"
	},
	"peerDependencies": {
		"postcss": "^8",
		"react": "^18",
		"react-dom": "^18"
	},
	"dependencies": {
		"@csstools/postcss-global-data": "3.0.0",
		"chalk": "4.1.2",
		"commander": "11.1.0",
		"cssnano": "7.0.5",
		"culori": "4.0.1",
		"postcss-custom-media": "11.0.0"
	},
	"resolutions": {
		"jackspeak": "2.1.1"
	},
	"size-limit": [
		{
			"name": "Library / JS",
			"path": "dist/bundle.js",
			"webpack": false
		},
		{
			"name": "Library / CSS",
			"path": "dist/bundle.css",
			"webpack": false
		},
		{
			"name": "Theming / JS",
			"path": "dist/tests/themingWithoutDefinition.js",
			"webpack": true
		},
		{
			"name": "Theming with a default theme definition / JS",
			"path": "dist/tests/themingWithDefinition.js",
			"webpack": true
		}
	],
	"engines": {
		"yarn": ">=1.0.0"
	}
}
