{
	"name": "reshaped",
	"description": "Professionally crafted design system in React & Figma for building products of any scale and complexity",
	"version": "2.8.4",
	"license": "SEE LICENSE IN LICENSE.md",
	"email": "hello@reshaped.so",
	"homepage": "https://reshaped.so",
	"keywords": [
		"react",
		"ui",
		"design-system",
		"react-components",
		"component-library",
		"components",
		"css-modules",
		"figma",
		"ui-kit",
		"accessibility",
		"accessible"
	],
	"bugs": {
		"url": "https://github.com/formaat-design/reshaped/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/formaat-design/reshaped"
	},
	"main": "./index.js",
	"module": "./index.js",
	"types": "./index.d.ts",
	"files": [
		"bin/**/*",
		"cli/**/*",
		"components/**/*",
		"config/**/*",
		"constants/**/*",
		"hooks/**/*",
		"icons/**/*",
		"styles/**/*",
		"themes/**/*",
		"types/**/*",
		"utilities/**/*",
		"bundle.css",
		"bundle.d.ts",
		"bundle.js",
		"index.d.ts",
		"index.js"
	],
	"bin": {
		"reshaped": "./bin/cli.js"
	},
	"scripts": {
		"dev": "storybook dev -c tools/storybook -p 3001 --disable-telemetry",
		"clean": "sh ./bin/clean.sh",
		"build": "yarn clean && yarn build:stories && yarn build:esm && yarn build:cjs && yarn build:css && yarn build:bundle && resolve-tspaths && cp -r dist/* ./",
		"build:themes": "node bin/cli.js theming --config cli/theming/reshaped.config.js --output src/themes",
		"build:esm": "tsc -p tsconfig.esm.json",
		"build:cjs": "tsc -p tsconfig.cjs.json",
		"build:css": "postcss \"src/**/*.css\" --dir dist --base src --config tools/build",
		"build:stories": "tsc -p tsconfig.stories.json",
		"build:bundle": "vite build && mv dist/bundle.umd.js dist/bundle.js && cp dist/index.d.ts dist/bundle.d.ts",
		"build:storybook": "storybook build -c tools/storybook -o dist/app --disable-telemetry",
		"build:chromatic": "STORYBOOK_ENV=chromatic storybook build -c tools/storybook",
		"release": "read -p 'Have you updated chromatic tests?' && yarn release:lib && yarn release:source && yarn build:storybook && yarn release:copy",
		"release:lib": "yarn build && yarn publish",
		"release:beta": "yarn build && yarn publish --tag beta",
		"release:test": "yarn build && yarn pack --filename reshaped-test.tgz",
		"release:source": "sh ./bin/release-source.sh",
		"release:copy": "sh ./bin/release-copy.sh",
		"chromatic": "chromatic -b build:chromatic --project-token=$(cat .chromatic)",
		"test:vrt": "yarn chromatic",
		"test:unit": "jest --config tools/jest/jest.config.js",
		"test:size": "size-limit",
		"lint": "yarn lint:js && yarn lint:css",
		"lint:js": "eslint --ext .ts,.tsx src/**/*.ts src/**/*.tsx --quiet --fix",
		"lint:css": "stylelint 'src/**/*.css'",
		"commit": "git-cz"
	},
	"browserslist": [
		"defaults and not IE 11"
	],
	"devDependencies": {
		"@commitlint/cli": "18.4.3",
		"@commitlint/config-conventional": "18.4.3",
		"@commitlint/types": "18.4.3",
		"@size-limit/preset-big-lib": "11.0.1",
		"@storybook/addon-a11y": "7.6.10",
		"@storybook/addon-docs": "7.6.10",
		"@storybook/addon-storysource": "7.6.10",
		"@storybook/addon-controls": "7.6.10",
		"@storybook/react": "7.6.10",
		"@storybook/react-vite": "7.6.10",
		"@testing-library/jest-dom": "6.1.6",
		"@testing-library/react": "14.1.2",
		"@testing-library/user-event": "14.5.2",
		"@types/events": "3.0.3",
		"@types/jest": "29.5.11",
		"@types/node": "20.10.6",
		"@types/react": "18.2.46",
		"@types/react-dom": "18.2.18",
		"@typescript-eslint/eslint-plugin": "6.16.0",
		"@typescript-eslint/parser": "6.16.0",
		"@vitejs/plugin-react": "4.2.1",
		"chromatic": "10.2.0",
		"cz-conventional-changelog": "3.3.0",
		"eslint": "8.56.0",
		"eslint-config-airbnb-typescript": "17.1.0",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-import": "2.29.1",
		"eslint-plugin-jsx-a11y": "6.8.0",
		"eslint-plugin-prettier": "5.1.2",
		"eslint-plugin-react": "7.33.2",
		"eslint-plugin-react-hooks": "4.6.0",
		"identity-obj-proxy": "3.0.0",
		"jest": "29.7.0",
		"jest-environment-jsdom": "29.7.0",
		"jest-matchmedia-mock": "1.1.0",
		"lefthook": "1.5.5",
		"postcss": "8.4.32",
		"postcss-cli": "11.0.0",
		"postcss-each": "1.1.0",
		"postcss-nested": "6.0.1",
		"prettier": "3.1.1",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"resolve-tspaths": "0.8.17",
		"size-limit": "11.0.1",
		"storybook": "7.6.10",
		"stylelint": "15.11.0",
		"stylelint-config-prettier": "9.0.5",
		"stylelint-config-standard": "34.0.0",
		"ts-jest": "29.1.1",
		"typescript": "5.3.3",
		"vite": "5.0.11",
		"vite-tsconfig-paths": "4.3.1"
	},
	"peerDependencies": {
		"postcss": "^8",
		"react": "^18",
		"react-dom": "^18"
	},
	"dependencies": {
		"@csstools/postcss-global-data": "2.1.1",
		"chalk": "4.1.2",
		"commander": "11.1.0",
		"cssnano": "6.0.3",
		"postcss-custom-media": "10.0.2"
	},
	"resolutions": {
		"jackspeak": "2.1.1"
	},
	"size-limit": [
		{
			"name": "Library / JS",
			"path": "dist/bundle.js",
			"webpack": false
		},
		{
			"name": "Library / CSS",
			"path": "dist/bundle.css",
			"webpack": false
		},
		{
			"name": "Theming / JS",
			"path": "dist/tests/themingWithoutDefinition.js",
			"webpack": true
		},
		{
			"name": "Theming with a default theme definition / JS",
			"path": "dist/tests/themingWithDefinition.js",
			"webpack": true
		}
	],
	"engines": {
		"yarn": ">=1.0.0"
	}
}
