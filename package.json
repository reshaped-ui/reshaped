{
	"name": "reshaped",
	"private": true,
	"version": "2.0.0-nightly.6",
	"author": "Dmitry Belyaev <blv.dmitry@gmail.com>",
	"main": "./index.js",
	"module": "./index.js",
	"types": "./index.d.ts",
	"files": [
		"bin/**/*",
		"cli/**/*",
		"components/**/*",
		"config/**/*",
		"constants/**/*",
		"hooks/**/*",
		"icons/**/*",
		"styles/**/*",
		"themes/**/*",
		"types/**/*",
		"utilities/**/*",
		"bundle.css",
		"bundle.d.ts",
		"bundle.js",
		"index.d.ts",
		"index.js"
	],
	"bin": {
		"reshaped": "./bin/cli.js"
	},
	"scripts": {
		"clean": "sh ./bin/clean.sh",
		"build": "yarn clean && yarn build:stories && yarn build:esm && yarn build:cjs && yarn build:css && yarn build:bundle && resolve-tspaths && cp -r dist/* ./",
		"build:themes": "node bin/cli.js theming --config cli/theming/reshaped.config.js --output src/themes --private",
		"build:esm": "tsc -p tsconfig.esm.json",
		"build:cjs": "tsc -p tsconfig.cjs.json",
		"build:css": "postcss \"src/**/*.css\" --dir dist --base src --config tools/build && cp -rp src/themes/media.css dist/themes/media.css && mkdir themes && cp -r src/themes/media.css themes/media.css",
		"build:stories": "tsc -p tsconfig.stories.json",
		"build:bundle": "vite build && mv dist/bundle.umd.js dist/bundle.js && cp dist/index.d.ts dist/bundle.d.ts",
		"start": "storybook dev -c tools/storybook -p 3001 --disable-telemetry",
		"build:storybook": "storybook build -c tools/storybook -o dist/app --disable-telemetry",
		"build:chromatic": "STORYBOOK_ENV=chromatic storybook build -c tools/storybook",
		"release": "read -p 'Have you updated chromatic tests?' && yarn release:lib && yarn release:source && yarn build:storybook",
		"release:lib": "yarn build && yarn version && yarn pack --filename reshaped-react-v$(jq -r .version package.json).tgz",
		"release:beta": "yarn build && yarn pack --filename reshaped-beta.tgz",
		"release:source": "git archive -o reshaped-source-v$(jq -r .version package.json).zip HEAD . ':!.chromatic'",
		"release:copy": "sh ./bin/copy-release.sh",
		"chromatic": "chromatic -b build:chromatic --project-token=$(cat .chromatic)",
		"test:vrt": "yarn chromatic",
		"test:unit": "jest --config tools/jest/jest.config.js",
		"test:size": "size-limit",
		"lint": "yarn lint:js && yarn lint:css",
		"lint:js": "eslint --ext .ts,.tsx src/**/*.ts src/**/*.tsx --quiet --fix",
		"lint:css": "stylelint 'src/**/*.css'"
	},
	"license": "SEE LICENSE IN LICENSE.md",
	"browserslist": [
		"defaults and not IE 11"
	],
	"devDependencies": {
		"@size-limit/preset-big-lib": "8.2.4",
		"@storybook/addon-a11y": "7.0.22",
		"@storybook/react": "7.0.22",
		"@storybook/react-vite": "7.0.22",
		"@testing-library/jest-dom": "5.16.5",
		"@testing-library/react": "14.0.0",
		"@testing-library/user-event": "14.4.3",
		"@types/events": "3.0.0",
		"@types/jest": "29.5.2",
		"@types/react": "18.2.12",
		"@types/react-dom": "18.2.5",
		"@typescript-eslint/eslint-plugin": "5.59.11",
		"@typescript-eslint/parser": "5.59.11",
		"@vitejs/plugin-react": "4.0.0",
		"chromatic": "6.19.8",
		"eslint": "8.43.0",
		"eslint-config-airbnb-typescript": "17.0.0",
		"eslint-config-prettier": "8.8.0",
		"eslint-plugin-import": "2.27.5",
		"eslint-plugin-jsx-a11y": "6.7.1",
		"eslint-plugin-prettier": "4.2.1",
		"eslint-plugin-react": "7.32.2",
		"eslint-plugin-react-hooks": "4.6.0",
		"identity-obj-proxy": "3.0.0",
		"jest": "29.5.0",
		"jest-environment-jsdom": "29.5.0",
		"jest-matchmedia-mock": "1.1.0",
		"lefthook": "1.4.2",
		"postcss": "8.4.24",
		"postcss-cli": "10.1.0",
		"postcss-each": "1.1.0",
		"postcss-import": "15.1.0",
		"postcss-nested": "6.0.1",
		"prettier": "2.8.8",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"resolve-tspaths": "0.8.13",
		"size-limit": "8.2.4",
		"storybook": "7.0.22",
		"stylelint": "15.9.0",
		"stylelint-config-prettier": "9.0.5",
		"stylelint-config-standard": "33.0.0",
		"ts-jest": "29.1.0",
		"typescript": "5.1.3",
		"vite": "4.3.9",
		"vite-tsconfig-paths": "4.2.0"
	},
	"peerDependencies": {
		"postcss": "^8.0.0",
		"react": "^18.0.0",
		"react-dom": "^18.0.0"
	},
	"dependencies": {
		"autoprefixer": "10.4.14",
		"chalk": "4.1.2",
		"commander": "11.0.0",
		"cssnano": "6.0.1",
		"postcss-custom-media": "8.0.2"
	},
	"size-limit": [
		{
			"name": "JS",
			"path": "dist/bundle.js",
			"webpack": false
		},
		{
			"name": "CSS",
			"path": "dist/bundle.css",
			"webpack": false
		}
	],
	"engines": {
		"yarn": ">=1.0.0"
	}
}
